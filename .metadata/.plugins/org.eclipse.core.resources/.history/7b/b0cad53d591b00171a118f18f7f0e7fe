import java.sql.ResultSet;
import java.sql.SQLException;

public class UserDaoImple extends BaseDao implements UserDao{
	
	
	@Override
	public LoginVo login(String id, String pw) {
		LoginVo loginVo = null;
		sql = "SELECT USERID, USERNAME FROM TB_USER WHERE USERID=? AND USERPW=?";
		
		try {
			conn = getConnection();
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1, id);
			pstmt.setString(2, pw);
			
			rs = pstmt.executeQuery();
			
//				if (rs.next()) {
//					loginVo = new LoginVo();
//					loginVo.setUserid(rs.getString("USERID"));
//					loginVo.setUsername(rs.getString("USERNAME"));
//				}
			
		} catch (SQLException e) {
			e.printStackTrace();
		}finally{
		try {
			rs.close();
			pstmt.close();
			conn.close();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
		
		return null;
	}
	
}
